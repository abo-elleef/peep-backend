<div class="nested-fields payment-row">
  <div class="row">
    <div class="col s9">
      <span class="paymentTypeName"></span>
    </div>
    <div class="col s3">
      <span class="amountValue"></span>
    </div>
    <div class="col s1">
      <%= link_to_remove_association "x", f, class: 'hide'%>
    </div>
  </div>
  <%= f.hidden_field :amount, class: 'amount' %>
  <%= f.hidden_field :payment_type_id, class: 'type_id' %>
</div>