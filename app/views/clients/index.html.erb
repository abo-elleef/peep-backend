<header class="p-4">
  <p class="m-0">Clients</p>
</header>
<div class="main-section">
  <div id="filters-row">
    <div class="input-field">
      <i class="material-icons prefix" style="color: #999">search</i>
      <input  id="clients_search" class="width-100" placeholder="Search Client data" type="text">
    </div>
    <div class="actions">
      <a class='dropdown-trigger btn waves-effects secondary-bg ' href='#' data-target='dropdown1'>Download</a>
      <%= link_to 'New Client', new_client_path, class: 'btn waves-teal' %>

      <!-- Dropdown Structure -->
      <ul id='dropdown1' class='dropdown-content'>
        <li><a target="_blank" href="/export/clients?export_type=xlsx">Excel</a></li>
        <li><a target="_blank" href="/export/clients?export_type=csv">CSV</a></li>
      </ul>

    </div>
  </div>
  <div class="data-row white box-shadow">
    <%= render "index" %>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  $("#clients_search").keyup(function(){
      $.get("clients.js?search=" + $(this).val());
  })
</script>