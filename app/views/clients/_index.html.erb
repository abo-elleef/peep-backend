<table class="sticky-table">
  <thead>
  <tr>
    <th> Name</th>
    <th> Phone</th>
    <th> Email</th>
    <th> Gender</th>
  </tr>
  </thead>
  <tbody>
  <% @clients.map do |client| %>
    <tr>
      <td>
        <%= link_to client.name, client_path(client) %>
      </td>
      <td> <%= client.phone %> </td>
      <td> <%= client.email %> </td>
      <td> <%= client.gender %> </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%== pagy_nav(@pagy) %>